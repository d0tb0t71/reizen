<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlaceDetailsActivity">


    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <include
            layout="@layout/top_action_bar"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_view"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    >
                    <ImageView
                        android:id="@+id/dePlaceImgIV"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@color/darkBlue"
                        android:src="@drawable/baseline_home_24"
                        android:scaleType="fitCenter"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Place Name:-"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/dePlaceNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Place Name"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location:-"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/dePlaceLocTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Place Name"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <Button
                        android:id="@+id/goHotelList"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/button_bg"
                        android:text="Hotel List"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="14sp"
                        android:layout_marginVertical="8dp"
                        android:layout_weight="2"
                        android:layout_marginRight="5dp"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/showInMap"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_bg"
                    android:text="Open in Map"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="8dp"
                    />

                <Button
                    android:id="@+id/add_to_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_bg"
                    android:text="Add to wishlist"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="8dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>